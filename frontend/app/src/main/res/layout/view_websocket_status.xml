<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/websocket_status_background">

    <!-- Main Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="4dp">

        <!-- Connection Indicator Dot -->
        <View
            android:id="@+id/indicatorDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_disconnected" />

        <!-- Connection Status Text -->
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disconnected"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/error_red" />

        <!-- Connection Progress -->
        <ProgressBar
            android:id="@+id/progressConnection"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Expand/Collapse Icon -->
        <ImageView
            android:id="@+id/iconExpand"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_expand_more"
            android:contentDescription="Toggle connection details" />

        <!-- Reconnect Button -->
        <Button
            android:id="@+id/btnReconnect"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Reconnect"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="0dp"
            android:minHeight="0dp"
            android:background="@drawable/button_reconnect"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Status Message (for notifications) -->
    <LinearLayout
        android:id="@+id/layoutStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:background="@color/info_blue_light"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/info_blue_dark"
            android:text="Status message" />

    </LinearLayout>

    <!-- Error Message -->
    <LinearLayout
        android:id="@+id/layoutErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:background="@color/error_red_light"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_error"
            android:contentDescription="Error icon" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/error_red_dark"
            android:text="Error message" />

    </LinearLayout>

    <!-- Connection Details (expandable) -->
    <LinearLayout
        android:id="@+id/layoutConnectionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingHorizontal="8dp"
        android:background="@color/background_light"
        android:visibility="gone">

        <!-- Latency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Latency:"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvLatency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0ms"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success_green" />

        </LinearLayout>

        <!-- Messages Sent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Messages Sent:"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvMessagesSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Messages Received -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Messages Received:"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvMessagesReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Reconnect Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reconnections:"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvReconnectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/warning_orange" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>