<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/viewPriorityIndicator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textActionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recovery Action"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />

                <TextView
                    android:id="@+id/textEstimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~30s"
                    android:textSize="10sp"
                    android:textColor="?android:textColorSecondary"
                    android:background="@drawable/bg_rounded_gray"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/textActionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ACTION TYPE"
                android:textSize="10sp"
                android:textColor="?android:textColorSecondary"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/textUserMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Additional message for the user"
                android:textSize="12sp"
                android:textColor="?android:textColorSecondary"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="Execute action" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
